{
  "compilerOptions": {
    "target": "ES2020", // moderne JS-Features
    "module": "commonjs", // Standard für Node.js / Express
    "rootDir": "src", // dein Quellcode-Ordner
    "outDir": "dist", // Kompilierte JS-Dateien
    "strict": true, // maximale Typprüfung
    "esModuleInterop": true, // Import-Kompatibilität
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Node.js Modulauflösung
    "skipLibCheck": true // schnellere Builds, weniger Probleme
  },
  "include": ["src"]
}
